<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlassView">
        <attr name="blurRadius" format="float" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="tintColor" format="color" />
        <attr name="saturation" format="float" />
        <attr name="brightness" format="float" />
        <attr name="contrast" format="float" />
        <attr name="exposure" format="float" />
        <attr name="gamma" format="float" />

        <!-- Refraction & Dispersion -->
        <attr name="refractionIntensity" format="float" />
        <attr name="dispersionIntensity" format="float" />
        <attr name="vibrancy" format="float" />

        <!-- Inner Shadow -->
        <attr name="innerShadowRadius" format="dimension" />
        <attr name="innerShadowColor" format="color" />
        <attr name="surfaceColor" format="color" />
        <attr name="hasDepthEffect" format="boolean" />
        <attr name="highlightStyle" format="enum">
            <enum name="none" value="0" />
            <enum name="touch" value="1" />
            <enum name="angular" value="2" />
        </attr>
        <attr name="highlightAngle" format="float" />
        <attr name="outerShadowRadius" format="dimension" />
        <attr name="outerShadowColor" format="color" />
        <attr name="outerShadowDx" format="dimension" />
        <attr name="outerShadowDy" format="dimension" />
        <attr name="isTiltEnabled" format="boolean" />
        <attr name="maxTiltAngle" format="float" />
    </declare-styleable>

    <declare-styleable name="GlassButton">
        <attr name="android:text" />
        <attr name="android:textColor" />
    </declare-styleable>

    <declare-styleable name="LiquidSlider">
        <attr name="value" format="integer" />
        <attr name="min_value" format="integer" />
        <attr name="max_value" format="integer" />
    </declare-styleable>
</resources>
