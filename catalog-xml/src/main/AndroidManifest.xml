<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for media picker -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LiquidGlassXmlCatalog"
        tools:targetApi="31">
        
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LiquidGlassXmlCatalog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activities.GlassPlaygroundActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.ButtonsActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".SliderActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.LiquidTestActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.LockScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.ControlCenterActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.DialogActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.MagnifierActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.ScrollContainerActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.BottomTabsActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.AdaptiveLuminanceGlassActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />
            
        <activity
            android:name=".activities.LazyScrollContainerActivity"
            android:exported="false"
            android:theme="@style/Theme.LiquidGlassXmlCatalog" />

    </application>

</manifest>
