<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.kyant.backdrop.xml.LiquidGlassView
        android:id="@+id/glass_view"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:cornerRadius="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glass_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corner Radius" />

        <com.google.android.material.slider.Slider
            android:id="@+id/corner_radius_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="1.0"
            android:valueFrom="0.0"
            android:valueTo="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blur Radius" />

        <com.google.android.material.slider.Slider
            android:id="@+id/blur_radius_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="0.0"
            android:valueFrom="0.0"
            android:valueTo="32.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refraction Height" />

        <com.google.android.material.slider.Slider
            android:id="@+id/refraction_height_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="0.1"
            android:valueFrom="0.0"
            android:valueTo="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refraction Amount" />

        <com.google.android.material.slider.Slider
            android:id="@+id/refraction_amount_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="0.2"
            android:valueFrom="0.0"
            android:valueTo="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispersion Intensity" />

        <com.google.android.material.slider.Slider
            android:id="@+id/dispersion_intensity_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="0.0"
            android:valueFrom="0.0"
            android:valueTo="1.0" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
