<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.kyant.backdrop.xml.LiquidGlassView
        android:id="@+id/connectivity_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cornerRadius="24dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2">

            <com.kyant.backdrop.catalog.xml.components.GlassIconButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/ic_airplane" />

            <com.kyant.backdrop.catalog.xml.components.GlassIconButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/ic_cellular" />

            <com.kyant.backdrop.catalog.xml.components.GlassIconButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/ic_wifi" />

            <com.kyant.backdrop.catalog.xml.components.GlassIconButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/ic_bluetooth" />

        </GridLayout>

    </com.kyant.backdrop.xml.LiquidGlassView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.kyant.backdrop.xml.LiquidGlassView
        android:id="@+id/media_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/connectivity_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Playing"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </com.kyant.backdrop.xml.LiquidGlassView>

    <LinearLayout
        android:id="@+id/sliders_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectivity_group">

        <com.kyant.backdrop.xml.LiquidGlassView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cornerRadius="24dp">

            <com.kyant.backdrop.catalog.xml.components.GlassSlider
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </com.kyant.backdrop.xml.LiquidGlassView>

        <com.kyant.backdrop.xml.LiquidGlassView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:cornerRadius="24dp">

            <com.kyant.backdrop.catalog.xml.components.GlassSlider
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </com.kyant.backdrop.xml.LiquidGlassView>

    </LinearLayout>

    <GridLayout
        android:id="@+id/buttons_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="@+id/sliders_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/sliders_group">

        <com.kyant.backdrop.catalog.xml.components.GlassIconButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_airplane" />

        <com.kyant.backdrop.catalog.xml.components.GlassIconButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_airplane" />

        <com.kyant.backdrop.catalog.xml.components.GlassIconButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_airplane" />

        <com.kyant.backdrop.catalog.xml.components.GlassIconButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_airplane" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
