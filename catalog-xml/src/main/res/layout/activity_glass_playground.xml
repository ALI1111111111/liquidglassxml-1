<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Glass Container -->
        <com.kyant.backdrop.xml.views.LiquidGlassContainer
            android:id="@+id/liquidGlassView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liquid Glass Effect"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjust parameters below to customize the glass effect"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:gravity="center" />

            </LinearLayout>

        </com.kyant.backdrop.xml.views.LiquidGlassContainer>

        <!-- Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/glass_background_dark"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Noise Control -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refraction Height"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <SeekBar
                    android:id="@+id/noiseSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/noiseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.50"
                    android:textColor="@android:color/white"
                    android:minWidth="48dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Noise Scale Control -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refraction Amount"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <SeekBar
                    android:id="@+id/noiseScaleSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="500"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/noiseScaleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textColor="@android:color/white"
                    android:minWidth="48dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Chromatic Aberration Control -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispersion Intensity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <SeekBar
                    android:id="@+id/chromaticAberrationSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/chromaticAberrationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.40"
                    android:textColor="@android:color/white"
                    android:minWidth="48dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Blur Control -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blur Radius"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <SeekBar
                    android:id="@+id/blurSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/blurValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.10"
                    android:textColor="@android:color/white"
                    android:minWidth="48dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Distortion Control -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlight Intensity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <SeekBar
                    android:id="@+id/distortionSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/distortionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.20"
                    android:textColor="@android:color/white"
                    android:minWidth="48dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Distortion Scale Control -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shadow Offset"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/distortionScaleSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="500"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/distortionScaleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@android:color/white"
                    android:minWidth="48dp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>