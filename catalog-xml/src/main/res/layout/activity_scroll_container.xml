<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wallpaper">

    <!-- Header -->
    <com.kyant.backdrop.xml.views.LiquidGlassContainer
        android:id="@+id/headerContainer"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Scroll Container Demo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/scrollToTopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:text="Top"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </com.kyant.backdrop.xml.views.LiquidGlassContainer>

    <!-- Main Scroll Container -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerContainer"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Dynamic Glass Cards -->
            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This glass card demonstrates dynamic effects as you scroll. The glass morphism adapts to different scroll positions and creates beautiful visual depth."
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </com.kyant.backdrop.xml.views.LiquidGlassContainer>

            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="🌟 Featured Content"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎨 Design Elements"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Each card in this scroll container showcases different glass effects. Notice how the refraction and blur intensities change as you navigate through the content."
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.kyant.backdrop.xml.views.LiquidGlassContainer
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:requiresFadingEdge="vertical"
                            app:cornerRadius="20dp"
                            app:refractionAmount="3.5dp"
                            app:refractionHeight="6dp"
                            app:glassPreset="gamingGlass"
                            app:blurRadius="2dp"
                            app:highlightAngle="45"
                            app:highlightAlpha="0.3"
                            app:shadowRadius="6dp"
                            app:shadowOffsetY="2dp"
                            app:shadowAlpha="0.2"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Action 1"
                                android:textColor="@android:color/white"
                                android:background="@android:color/transparent"/>

                        </com.kyant.backdrop.xml.views.LiquidGlassContainer>

                        <com.kyant.backdrop.xml.views.LiquidGlassContainer
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Action 2"
                                android:textColor="@android:color/white"
                                android:background="@android:color/transparent" />

                        </com.kyant.backdrop.xml.views.LiquidGlassContainer>

                    </LinearLayout>

                </LinearLayout>

            </com.kyant.backdrop.xml.views.LiquidGlassContainer>

            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊 Interactive Controls"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glass Intensity"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/glassIntensitySeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="50"
                        android:max="100"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blur Radius"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/blurRadiusSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="30"
                        android:max="100" />

                </LinearLayout>

            </com.kyant.backdrop.xml.views.LiquidGlassContainer>

            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/card4"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="🔄 Dynamic Effects"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="This card demonstrates how glass effects can change dynamically based on scroll position. The effects become more pronounced as you scroll down and interact with the content."
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/scrollPositionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scroll Position: 0%"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.kyant.backdrop.xml.views.LiquidGlassContainer>

            <!-- More Content Cards -->
            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="🖼️ Large Content Area\n\nThis is a larger content area that showcases how glass effects work with different content sizes and layouts."
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="24dp" />

            </com.kyant.backdrop.xml.views.LiquidGlassContainer>

            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="🎯 End of Content\n\nYou've reached the end of the scrollable content. The glass effects provide consistent visual appeal throughout the entire scroll journey."
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="20dp" />

            </com.kyant.backdrop.xml.views.LiquidGlassContainer>

        </LinearLayout>

    </ScrollView>

    <!-- Floating Action Button -->
    <com.kyant.backdrop.xml.views.LiquidGlassContainer
        android:id="@+id/fabContainer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp">

        <Button
            android:id="@+id/fabButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="⚡"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

    </com.kyant.backdrop.xml.views.LiquidGlassContainer>

</RelativeLayout>