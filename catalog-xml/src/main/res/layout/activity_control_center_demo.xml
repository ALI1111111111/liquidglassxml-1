<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout">

    <!-- LayerBackdropView captures background -->
    <com.kyant.backdrop.xml.backdrop.LayerBackdropView
        android:id="@+id/backdropLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/system_home_screen_light" />

    </com.kyant.backdrop.xml.backdrop.LayerBackdropView>

    <!-- Draggable Control Center Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="80dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <!-- Top Row: 2x2 Grid Card + Large Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- 2x2 Grid Card with 4 buttons -->
            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/gridCard"
                android:layout_width="0dp"
                android:layout_height="152dp"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:padding="16dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="2"
                    android:rowCount="2">

                    <!-- WiFi Button (Top Left) -->
                    <FrameLayout
                        android:id="@+id/wifiButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_button_bg">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/wifi_48px"
                            android:tint="@android:color/white" />
                    </FrameLayout>

                    <!-- Bluetooth Button (Top Right) -->
                    <FrameLayout
                        android:id="@+id/bluetoothButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_button_bg_active">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bluetooth_48px"
                            android:tint="@android:color/white" />
                    </FrameLayout>

                    <!-- Airplane Button (Bottom Left) -->
                    <FrameLayout
                        android:id="@+id/airplaneButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_button_bg_active">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/flight_40px"
                            android:tint="@android:color/white" />
                    </FrameLayout>

                    <!-- Empty slot (Bottom Right) -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1" />

                </GridLayout>

            </com.kyant.backdrop.xml.views.LiquidGlassContainer>

            <!-- Large Display Card -->
            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/displayCard"
                android:layout_width="0dp"
                android:layout_height="152dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Middle Row: Small Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <!-- Two Small Cards Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.kyant.backdrop.xml.views.LiquidGlassContainer
                        android:id="@+id/smallCard1"
                        android:layout_width="0dp"
                        android:layout_height="68dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="16dp" />

                    <com.kyant.backdrop.xml.views.LiquidGlassContainer
                        android:id="@+id/smallCard2"
                        android:layout_width="0dp"
                        android:layout_height="68dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <!-- Wide Card -->
                <com.kyant.backdrop.xml.views.LiquidGlassContainer
                    android:id="@+id/wideCard"
                    android:layout_width="match_parent"
                    android:layout_height="68dp" />

            </LinearLayout>

            <!-- Tall Card on Right -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.kyant.backdrop.xml.views.LiquidGlassContainer
                    android:id="@+id/tallCard"
                    android:layout_width="0dp"
                    android:layout_height="152dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp" />

                <com.kyant.backdrop.xml.views.LiquidGlassContainer
                    android:id="@+id/tallCard2"
                    android:layout_width="0dp"
                    android:layout_height="152dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
