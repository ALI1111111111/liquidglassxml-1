<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_light"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="80dp">

        <!-- Row 1: 2 large tiles -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/glassTile1"
                android:layout_width="136dp"
                android:layout_height="136dp"
               />

            <View
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/glassTile2"
                android:layout_width="136dp"
                android:layout_height="136dp"
                app:cornerRadius="68dp" />

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="16dp" />

        <!-- Row 2: mixed tiles -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.kyant.backdrop.xml.views.LiquidGlassContainer
                        android:id="@+id/glassTile3"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        app:cornerRadius="34dp" />

                    <View android:layout_width="16dp" android:layout_height="16dp" />

                    <com.kyant.backdrop.xml.views.LiquidGlassContainer
                        android:id="@+id/glassTile4"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        app:cornerRadius="34dp" />

                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="16dp" />

                <com.kyant.backdrop.xml.views.LiquidGlassContainer
                    android:id="@+id/glassTile5"
                    android:layout_width="136dp"
                    android:layout_height="68dp"
                    app:cornerRadius="34dp" />

            </LinearLayout>

            <View android:layout_width="16dp" android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.kyant.backdrop.xml.views.LiquidGlassContainer
                    android:id="@+id/glassTile6"
                    android:layout_width="68dp"
                    android:layout_height="136dp"
                    app:cornerRadius="34dp" />

                <View android:layout_width="16dp" android:layout_height="16dp" />

                <com.kyant.backdrop.xml.views.LiquidGlassContainer
                    android:id="@+id/glassTile7"
                    android:layout_width="68dp"
                    android:layout_height="136dp"
                    app:cornerRadius="34dp" />
            </LinearLayout>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="16dp" />

        <!-- Row 3: 1 large + 3 small tiles -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.kyant.backdrop.xml.views.LiquidGlassContainer
                android:id="@+id/glassTile8"
                android:layout_width="136dp"
                android:layout_height="136dp"
                app:cornerRadius="68dp" />

            <View android:layout_width="16dp" android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.kyant.backdrop.xml.views.LiquidGlassContainer
                        android:id="@+id/glassTile9"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        app:cornerRadius="34dp" />

                    <View android:layout_width="16dp" android:layout_height="16dp" />

                    <com.kyant.backdrop.xml.views.LiquidGlassContainer
                        android:id="@+id/glassTile10"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        app:cornerRadius="34dp" />

                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="16dp" />

                <com.kyant.backdrop.xml.views.LiquidGlassContainer
                    android:id="@+id/glassTile11"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:cornerRadius="34dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Change Wallpaper Button -->
        <Button
            android:id="@+id/btnChangeWallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="Change Wallpaper"
            android:background="#66FFFFFF"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>
